{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "baseUrl": "./src/",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "strict": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "types": ["cypress"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "public",
    ".cache",
    "**/*.spec.ts",
    "./.cache",
    "./gatsby-config.ts",
    "./gatsby-node.ts",
    "./gatsby-browser.ts",
    "./gatsby-ssr.ts"
  ]
}
